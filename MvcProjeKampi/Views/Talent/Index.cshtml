@using EntityLayer.Concrete
@model List<Talent>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TalentLayout.cshtml";
}
@*"~/Views/Shared/_AdminLayout.cshtml"*@

<body>
    <!-- main -->
    <div class="main">

        <h1>Kişisel Yeteneklerim Sayfası</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <p><a href="/AdminCategory/Index" class="btn btn-primary">Ana Sayfaya Git</a></p>
  
                <!-- main-row-one -->

                <div class="profile-grid logo wthree">
                    <img src="~/Images/FatihDeniz.jpg" alt="">
                    <h2>Fatih Deniz</h2>
                    <p>Kişinin yetenekleri, bilgisinin gölgesinde kök salar.</p>
                </div>
                <h3 class="title">Yetenekler</h3>
                <br />
                <td>
                    <div>
                        <a href="/Talent/AddTalent" class="btn btn-info"><button type="post" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i> Yeni Yetenek Ekle</button></a>
                        <a href="/Talent/AddTalent" class="btn btn-info"><button type="post" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i> Yetenekleri Güncelle</button></a>
                    </div>
                </td>
                <br />
                <div class="col-md-6 skills-right bar_group">
                    @foreach (var item in Model)
                    {
                        <div class='bar_group__bar thin' label=' @item.SkillArea.Area :&nbsp; @item.SkillName &nbsp;&nbsp; %@item.SkillLevel' value='@item.SkillLevel'></div>
                    }
                </div>
                <!--bar-js-->
                <script src="~/Themes/Skills_Theme/web/js/bars.js"></script>
                <div class="social-icons agileits">
                    <ul>
                        <li><a href="https://www.facebook.com/fdeniz07/"></a></li>
                        <li><a href="#" class="fb"></a></li>
                        <li><a href="#" class="be"></a></li>
                        <li><a href="#" class="gg"></a></li>
                    </ul>
                </div>
                <div class="clear"> </div>
            </div>
        </div>
        <p>
        </p>
    </div>
</body>

