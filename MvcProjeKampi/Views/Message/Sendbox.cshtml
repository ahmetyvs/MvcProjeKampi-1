@using EntityLayer.Concrete
@model List<Message>
@{ ViewBag.Title = "Sendbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"><h1><b>Mesaj Sayfası</b></h1></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            @Html.Action("PartialMessageMenu", "Contact")

            <div class="col-md-9">
                <div class="card card-primary card-outline">

                    <!--Mesaj Bölümü Baslik Alani-->
                    <div class="card-header">
                        <h3 class="card-title"><b>Gönderilen Mesajlar</b></h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mail Kutusunda Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary"><i class="fas fa-search"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @Html.Action("PartialMessageList", "Contact")

                    <!--Mesaj Bölümü Icerik Alani-->
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="icheck-primary">
                                                <input type="checkbox" value="" id="check1">
                                                <label for="check1"></label>
                                            </div>
                                        </td>
                                        <td class="mailbox-star"><a href="/Message/GetSendboxMessageDetails/@item.MessageId"><i class="fas fa-star text-warning"></i></a></td>
                                        <td class="mailbox-name"><a href="/Message/GetSendboxMessageDetails/@item.MessageId">@item.ReceiverMail</a></td>
                                        <td class="mailbox-subject">
                                            <b>@item.Subject</b> - @item.MessageContent.Substring(0, 30)...
                                        </td>
                                        <td class="mailbox-attachment"></td>
                                        <td class="mailbox-date"><b>@(((DateTime) item.MessageDate).ToString("dd-MMM-yyyy"))</b></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Mesaj Bölümü Alt Bölüm -->
                @Html.Action("PartialMessageListFooter", "Contact")

            </div>
        </div>
    </section>
</body>
</html>